doctype
html.no-js(lang='en' ng-app='fas')
  block link
    -var selected = 'base'

  -var menu = {'Lobby': '/lobby'}
  -var menu_no_user = {'Register': '/register', 'Sign in': '/login'}

  head
    title Charity Challenge // #{title}
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')

    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.min.css')
    link(rel='stylesheet', href='/css/foundation-icons/foundation-icons.css')
    link(rel='stylesheet', href='/css/app.css')

    script(src='/js/vendor/modernizr.js')
    script(src='/js/vendor/angular.min.js')
    
    block head-extra

  body
    nav.fixed

      nav.top-bar(data-topbar role='navigation')
        ul.title-area
          li.name
            h1: a(href='/') Charity Challenge // #{title}
          li.toggle-topbar.menu-icon
            a(href='#'): span Menu


        section.top-bar-section
          ul.left
            li: a(href='#') Left Nav Button

          ul.right
            if user
              for val, key in menu
                li(class= key === selected?'active':'')
                  a(href=val title=key)= key
              li.divider
              li.has-dropdown

                a(href='#') #{user.username}
                ul.dropdown
                  li: a(href='/logout') Sign out
            else
              for val, key in menu_no_user
                li(class= key === selected?'active':'')
                  a(href=val title=key)= key

    block content

    script(src='/js/vendor/jquery.js')
    script(src='/js/foundation.min.js')
    script $(document).foundation();
